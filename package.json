{
  "name": "shift-guard",
  "version": "0.0.4",
  "description": "Prevent accidental clicks on content that suddenly shifts or appears.",
  "author": "Marcus Ulrich <shiftguard@mallocs.net",
  "license": "ISC",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf dist ./*.zip ./*.crx ./*.pem ./*.xpi",
    "dev": "vite",
    "build:firefox": "NODE_ENV=production run-s compile build:firefox:*",
    "build:firefox:manifest": "cp src/manifest/manifest.firefox.json ./dist/manifest.json",
    "build:chrome": "NODE_ENV=production run-s compile build:chrome:*",
    "build:chrome:manifest": "cp src/manifest/manifest.chrome.json ./dist/manifest.json",
    "bundle": "run-s clean bundle:*",
    "bundle:firefox": "run-s bundle:firefox:*",
    "bundle:firefox:build": "run-s build:firefox",
    "bundle:firefox:zip": "web-ext build -s dist/ -a . && mv ./shift_guard-$npm_package_version.zip ./shift_guard-firefox-v$npm_package_version.xpi",
    "bundle:chrome": "run-s bundle:chrome:*",
    "bundle:chrome:build": "run-s build:chrome",
    "bundle:chrome:zip": "zip -r ./shift_guard-chrome-v$npm_package_version.zip ./dist -x *.DS_Store",
    "bundle:chrome:crx": "crx pack ./dist -o ./shift_guard-chrome-v$npm_package_version.crx",
    "bundle:zip": "zip -r shift_guard-source-$npm_package_version.zip src dist test *.json *.ts -x *.DS_Store",
    "compile": "run-s compile:*",
    "compile:tsc": "tsc",
    "compile:vite": "run-p compile:vite:*",
    "compile:vite:web": "vite build",
    "compile:vite:js": "vite build --config vite.content.config.js",
    "sign-unlisted:firefox": "source .env && web-ext sign --channel=unlisted --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET",
    "//": "submitting to listed channel is currently buggy: https://extensionworkshop.com/documentation/develop/getting-started-with-web-ext/#signing-test-version-listed",
    "sign:firefox": "source .env && web-ext sign --channel=listed --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET",
    "version:update": "npx replace ' \"version\": \"(\\d+).(\\d+).(\\d+)\"' \" \\\"version\\\": \\\"$npm_package_version\\\"\" ./manifest/*.json",
    "test:e2e": "wdio run ./wdio.e2e.conf.ts"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.10.4",
    "@wdio/browser-runner": "^8.14.6",
    "@wdio/cli": "^8.14.6",
    "@wdio/firefox-profile-service": "^8.14.0",
    "@wdio/globals": "^8.16.6",
    "@wdio/mocha-framework": "^8.14.0",
    "@wdio/spec-reporter": "^8.14.0",
    "@wdio/static-server-service": "^8.16.7",
    "@wdio/types": "^8.16.7",
    "crx": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "web-ext": "^7.6.2",
    "webextension-polyfill": "^0.10.0"
  }
}